// Tables
//
// Styleguide 4


// Tables
//
// Columns for the extended game list panel
//
// Markup:
// <table class="table {$modifiers}">
//   <thead>
//     <tr><th>#</th><th>Title</th><th>Wat</th></tr>
//   <tbody>
//     <tr><td>1</td><td>First Entry</td><td>Foo</td></tr>
//     <tr><td>2</td><td>Second Entry</td><td>Bar</td></tr>
//     <tr><td>3</td><td>Third Entry</td><td>Zeee</td></tr>
//   </tbody>
// </table>
//
// .table-striped     - Striped table
// .table--selectable - Selectable rows
//
// Styleguide 4.1
table.table

	tr > th
		font-weight $font-weight-normal

	tr > th, tr > td
		border none
		padding 3px 5px
		position relative
		&:first-child
			padding-left 10px
		&.name
			font-weight $font-weight-bold
		&.td-dlbtn
			width 50px
		&.center
			vertical-align middle
			text-align center
		&.right
			text-align right

		> label
			margin-bottom -8px
	tr.center-vertically > td
		vertical-align middle

	tr.inactive > td
		text-decoration line-through

	tr.collapsed > td
		padding-top 0
		padding-bottom 0
		margin-top 0
		margin-bottom 0

	td.td--icon
		width 30px

.table-striped tr
	> td.nostripe
		padding-left 5px

.table--selectable tr, tr.selectable
	> td
		cursor pointer
		transition all $animation-shorter

.table--inner-border
	margin-bottom 10px
	tr
		> td, > th
			border-bottom-style solid
			border-bottom-width 2px
	tr:last-child
		> td, > th
			border-bottom none
	tr th
		border-right-style solid
		border-right-width 2px
		padding-right 15px
	tr td
		padding-top 5px
	tr:first-child td
		padding-top 0


// Padding is screwed up otherwise.
.table-wrapper
	margin-left 15px
	margin-right 15px

// square image in row
td.td--img
	width 50px
	> img
		height 50px
		width 50px
		margin-top 3px
		margin-bottom 3px
td.td--img:first-child > img
	margin-left -3px