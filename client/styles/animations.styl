.ui-view-wrapper
	overflow hidden
	transition height ease $animation-short
	box-sizing border-box

	> [ui-view]

		&.ng-leave, &.ng-enter
			transition all $animation-short ease-in-out
			left 30px
			right 30px
			position absolute

		&.ng-enter
			opacity 0

		&.ng-enter-active
			opacity 1

		&.ng-leave
			opacity 1

		&.ng-leave-active
			opacity 0