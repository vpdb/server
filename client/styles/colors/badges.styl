//
// Dark theme
// --------------------------------------------------
.theme-dark

	.badge
		color $color-lightest-inv
		background-color $color-dark

		.a
			color $color-lightest-inv
			.svg-icon
				fill $color-lightest-inv
			&:hover
				color black
				.svg-icon
					fill black

	.badge--small
		color $color-lighter
		background-color $color-darkest

	.badge--verb
		color $color-lighter
	.badge--verb--get
		background-color #294875
	.badge--verb--post
		background-color #325b1e
	.badge--verb--put
		background-color #605d06
	.badge--verb--delete
		background-color #7a3632

	div:hover
		> .badge--verb--get
			background-color #2b5281
		> .badge--verb--post
			background-color #3c6820
		> .badge--verb--put
			background-color #6e6b06
		> .badge--verb--delete
			background-color #8c3935

	.badge--tag
		color $color-lightish
		background-color #414141
		&:before
			background-image url("/images/tag-head-dark.svg")

	// The Top 10/100/300 badges
	.top-badge
		&.gold
			.top-block
				color $color-primary
			.svg-icon
				fill $color-primary
		&.silver
			.top-block
				color $color-lighter
			.svg-icon
				fill $color-lighter
		&.bronze
			.top-block
				color $color-light
			.svg-icon
				fill $color-light
		&:hover
			&.gold
				.top-block
					color $color-primary-light
				.svg-icon
					fill $color-primary-light
			&.silver
				.top-block
					color $color-lightest
				.svg-icon
					fill $color-lightest
			&.bronze
				.top-block
					color $color-lightish
				.svg-icon
					fill $color-lightish
	//
// Light theme
// --------------------------------------------------
.theme-light

	.badge
		color $color-lightest
		background-color $color-dark-inv

		.a
			color $color-lightest
			&:hover
				color white
			&.svg-icon
				fill $color-lightest
				&:hover
					fill white

	.badge--tag
		background-color #b5b4b2
		&:before
			background-image url("/images/tag-head-light.svg")
